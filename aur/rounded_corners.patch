+  MetaWindowActor *self = data;
+  if (pref == META_PREF_WINDOW_EDGE_PADDING ||
+      pref == META_PREF_CORNER_RADIUS)
+    {
+      update_rounded_corner_bounds(self);
+      clutter_actor_queue_redraw(CLUTTER_ACTOR(self));
+    }
